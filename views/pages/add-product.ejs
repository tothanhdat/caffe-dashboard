<% include ../partials/header%>
<%- include ../partials/sidebar%>
<div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <form action='/san-pham/add' method='POST' enctype='multipart/form-data'>
                <h4 class="form-header text-uppercase">
                  <i class="fa fa-user-circle-o"></i>
                   Thông Tin Sản Phẩm
                </h4>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">Tên Sản Phẩm</label>
                  <div class="col-sm-10">
                    <input type="text" name='nameProduct' id="txtnameProduct" class="form-control" placeholder="Vd: Caffe Sua" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="input-3" class="col-sm-2 col-form-label">ID Sản Phẩm</label>
                  <div class="col-sm-10">
                    <input type="text" id="txtidProduct" name='idProduct' class="form-control" placeholder="1711060664" required>
                  </div>
                </div>
                <h4 class="form-header">
                <i class="fa fa-file-text-o"></i>
                  YÊU CẦU
                </h4>
                <!--
                <div class="form-group row">
                  <label for="input-5" class="col-sm-2 col-form-label">Giới tính</label>
                  <div class="col-sm-10">
                    <select class="form-control" required>
                        <option>Nam</option>
                        <option>Nữ</option>
                    </select>
                    </div>
                  </div>
                   -->
                <div class="form-group row">
                  <label for="input-6" class="col-sm-2 col-form-label">Chọn Danh Mục</label>
                  <div class="col-sm-10">
                      <select class="form-control" name='idCategory' id="idCategory" required>
                              <% if (listCategory && listCategory.length > 0) { %>
                                <% listCategory.forEach(category => { %> 
                                  <option><%= category.nameCategory %></option>
                            <% }) %>
                          <% } %>
                      </select>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">Đơn giá</label>
                  <div class="col-sm-10">
                    <input type="text" name='price' id="txtprice" class="form-control input-price" placeholder="20.000 VNĐ" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="input-6" class="col-sm-2 col-form-label">Upload Avatar</label>
                  <input type="file" name="avatar" id='uploadAvatar'>
                </div>
                <div class="form-footer">
                    <button  class="btn btn-danger"><i class="fa fa-times"></i>REMOVE</button>
                    <button  class="btn btn-success" id="btnLuu" type='submit'>
                      <i class="fa fa-check-square-o" ></i> 
                      Lưu vào CSDL
                    </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div><!--End Row-->
      <script src="/cleave.lib.js"></script>
      <script src="/cleave.js"></script>
<% include ../partials/footer %>
  $(document).ready(function(){
    <% if (alertInsertProductError) { %>
      alert('Sản phẩm đã tồn tại');
    <% } %>
  })
</script> 
